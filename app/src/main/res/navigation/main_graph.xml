<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_graph"
    app:startDestination="@id/authFragment">
    <fragment
        android:id="@+id/authFragment"
        android:name="com.canerture.firebaseexamples.presentation.auth.AuthFragment"
        android:label="AuthFragment" >
        <action
            android:id="@+id/authToFirestoreOperations"
            app:destination="@id/firestoreOperationsFragment"
            app:popUpTo="@id/login_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/firestoreOperationsFragment"
        android:name="com.canerture.firebaseexamples.presentation.firestore.FirestoreOperationsFragment"
        android:label="FirestoreOperationsFragment" >
        <action
            android:id="@+id/firestoreOperationsToDetail"
            app:destination="@id/todoDetailBottomSheet" />
        <action
            android:id="@+id/firestoreOperationsToAddTodo"
            app:destination="@id/addTodoBottomSheet" />
    </fragment>
    <dialog
        android:id="@+id/todoDetailBottomSheet"
        android:name="com.canerture.firebaseexamples.presentation.firestore.detail.TodoDetailBottomSheet"
        android:label="ContactDetailBottomSheet" >
        <argument
            android:name="documentId"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/addTodoBottomSheet"
        android:name="com.canerture.firebaseexamples.presentation.firestore.addtodo.AddTodoBottomSheet"
        android:label="bottom_sheet_add_todo"
        tools:layout="@layout/bottom_sheet_add_todo" />
</navigation>